---
import { Button } from "react-daisyui" 
import Layout from "../layouts/Layout.astro"

const buttonColors = ["primary" , "neutral" , "secondary" , "accent" , "ghost" , "info" , "success" , "warning" , "error"] as Array<"primary" | "neutral" | "secondary" | "accent" | "ghost" | "info" | "success" | "warning" | "error">
---
<Layout title="Home">
  <section class="prose">
    <h1>Heading 1</h1>
    <h2>Heading 2</h2>
    <h3>Heading 3</h3>
    <h4>Heading 4</h4>
    <h5>Heading 5</h5>
    <h6>Heading 6</h6>
  </section>
  <section class="flex gap-2">
    {buttonColors.map(color => <Button color={color}>{color}</Button>)}
  </section>
</Layout>
